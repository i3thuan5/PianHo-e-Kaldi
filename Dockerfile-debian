FROM python:3.12-bookworm AS base

ENV LANG C.UTF-8

# For intel-mkl, https://packages.debian.org/bookworm/intel-mkl
RUN sed '0,/Signed-By/s/Components: main/Components: main non-free non-free-firmware/g1' \
    -i /etc/apt/sources.list.d/debian.sources

RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        g++ \
        make \
        automake \
        autoconf \
        bzip2 \
        unzip \
        wget \
        sox \
        libtool \
        git \
        subversion \
        zlib1g-dev \
        ca-certificates \
        gfortran \
        patch \
        ffmpeg \
        vim \
        intel-mkl \
        && \
    rm -rf /var/lib/apt/lists/*

FROM base AS compiled

RUN git clone --depth 1 \
    https://github.com/i3thuan5/kaldi.git \
    --branch 2024-before-openfst-1.7.6 \
    /opt/kaldi
RUN cd /opt/kaldi/tools && \
        make -j $(nproc --ignore=4) && \
        ./extras/check_dependencies.sh
RUN cd /opt/kaldi/src && \
       ./configure --shared --use-cuda=no
RUN cd /opt/kaldi/src && \
        make depend -j $(nproc --ignore=4)
RUN cd /opt/kaldi/src && \
        make -j $(nproc --ignore=4)
RUN find /opt/kaldi -type f \( -name "*.o" -o -name "*.a" \) -delete

WORKDIR /opt/kaldi/egs/formosa/s5
RUN rm -rf RESULTS cmd.sh local run.sh  # ç•™conf, path.sh, steps, utils
COPY s5/cmd.sh /opt/kaldi/egs/formosa/s5/


FROM base

COPY --from=compiled /opt/kaldi /opt/kaldi

WORKDIR /opt/kaldi/
